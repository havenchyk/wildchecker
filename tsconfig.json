{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "outDir": "dest",
    "baseUrl": "src",
    "allowJs": false,
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "helpers",
    "dest"
  ]
}
